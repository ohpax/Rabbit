
<div class="lists-header row">
<div class="lists-title pull-left col-md-8">
<h1><%= current_user.name %>'s lists</h1>
</div>
<div class="new-list col-md-4">
  <%= link_to 'Create a New List', new_list_path, class: "btn btn-default btn-lg" %>
</div>
</div>
    <% @lists.each do |list| %>
        <h2>
          <%= link_to list.title, list %> <br>
          <small class="author">Created <%= time_ago_in_words(list.created_at) %> ago, by <%= list.user.name %></small>
        </h2>
        <% if (list.public?) %>
          <span class="glyphicon glyphicon-eye-open"> </span>
        <% else %> 
          <span class="glyphicon glyphicon-eye-close"> </span>
        <% end %>

        <% if(current_user.id == list.user.id) %>

        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
    <% end %>

<br>

